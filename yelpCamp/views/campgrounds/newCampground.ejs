<% layout('layouts/boilerplate') %>
    <h1>Enter Details</h1>
    <form action="/campgrounds" method="POST">
        <div>
            <label for="title">Title</label>
            <input type="text" name="campground[title]" id="title" placeholder="Frog Lake">
        </div>
        <div>
            <label for="location">Location</label>
            <input type="text" name="campground[location]" id="location" placeholder="Houston, Texas">
        </div>
        <button>Submit</button>
    </form>
    <footer>
        <a href="/campgrounds">Cancel</a>
    </footer>